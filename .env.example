# Environment Variables Example
# Copiar este archivo como .env y ajustar valores

# Configuración de la aplicación
APP_NAME="FastAPI Performance Testing"
APP_VERSION="1.0.0"
DEBUG=False

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# Logging
LOG_LEVEL="INFO"

# CORS (si es necesario)
# CORS_ORIGINS="http://localhost:3000,https://example.com"

# Security (generar con: python -c "import secrets; print(secrets.token_urlsafe(32))")
# SECRET_KEY="your-secret-key-here"

# Database (para extensiones futuras)
# DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# Redis (para cache, si se implementa)
# REDIS_URL="redis://localhost:6379/0"

# Monitoring (opcional)
# SENTRY_DSN=""
# PROMETHEUS_PORT=9090
