# Configuración del Sistema Automatizado de Benchmarks

# Zona Horaria
TZ=America/Mexico_City

# Nivel de Logs (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Entorno de Benchmark
BENCHMARK_ENV=docker

# URL del servidor FastAPI (para benchmarks internos)
TARGET_URL=http://fastapi-app:8000

# Puerto de FastAPI (expuesto al host)
FASTAPI_PORT=8000

# Configuración de Recursos
MAX_CPUS=2.0
MAX_MEMORY=2G
MIN_CPUS=0.5
MIN_MEMORY=512M

# Horarios de Ejecución (formato cron)
# Por defecto: 9:00 AM y 9:00 PM
CRON_MORNING=0 9 * * *
CRON_EVENING=0 21 * * *
CRON_WEEKLY_ANALYSIS=0 23 * * 0

# Configuración de Benchmarks
BENCHMARK_DURATION=30
BENCHMARK_CONCURRENCY=50
BENCHMARK_REQUESTS=10000

# Retención de Logs (días)
LOG_RETENTION_DAYS=30

# Configuración de Docker Compose
COMPOSE_PROJECT_NAME=benchmark-automatico
